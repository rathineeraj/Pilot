<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_city"
    android:layout_height="match_parent">


    <include android:id="@+id/header"
        layout="@layout/action_bar"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/twenty_dp"
        android:layout_below="@+id/header">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="18dp">

                <HorizontalScrollView
                    android:id="@+id/nameText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/name"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="28sp" />
                    </LinearLayout>


                </HorizontalScrollView>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameText"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:text="@string/email"
                    android:textColor="@color/white"
                    android:padding="@dimen/ten_dp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <HorizontalScrollView
                    android:id="@+id/emailtext"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/textView7">

                    <TextView
                        android:id="@+id/textViewEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/ten_dp"
                        android:gravity="left|center_vertical"
                        android:scrollHorizontally="true"
                        android:padding="@dimen/ten_dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:text="user@example.com"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </HorizontalScrollView>

                <TextView
                    android:id="@+id/textViewloc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailtext"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:padding="@dimen/ten_dp"
                    android:text="@string/locale"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textViewLocale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewloc"
                    android:drawablePadding="@dimen/ten_dp"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/ten_dp"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />


                <TextView
                    android:id="@+id/textViewComp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewLocale"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:padding="@dimen/ten_dp"
                    android:text="@string/Company_name"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textViewCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewComp"
                    android:drawablePadding="@dimen/ten_dp"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/ten_dp"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textViewfax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewCompany"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:padding="@dimen/ten_dp"
                    android:text="@string/fax"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/faxText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewfax"
                    android:drawablePadding="@dimen/ten_dp"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/ten_dp"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/faxText"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:padding="@dimen/ten_dp"
                    android:text="@string/phone1"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textViewPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView6"
                    android:drawablePadding="@dimen/ten_dp"
                    android:gravity="left|center_vertical"
                    android:text="xxx-xxx-xxxx"
                    android:padding="@dimen/ten_dp"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewPhone"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:padding="@dimen/ten_dp"
                    android:text="@string/phone2"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textViewPhone2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView11"
                    android:drawablePadding="@dimen/ten_dp"
                    android:gravity="left|center_vertical"
                    android:text="xxx-xxx-xxxx"
                    android:padding="@dimen/ten_dp"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewPhone2"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:padding="@dimen/ten_dp"
                    android:text="@string/phone3"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textViewPhone3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView8"
                    android:drawablePadding="@dimen/ten_dp"
                    android:gravity="left|center_vertical"
                    android:text="xxx-xxx-xxxx"
                    android:padding="@dimen/ten_dp"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewPhone3"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:padding="@dimen/ten_dp"
                    android:text="@string/phone4"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textViewPhone4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView9"
                    android:drawablePadding="@dimen/ten_dp"
                    android:gravity="left|center_vertical"
                    android:text="xxx-xxx-xxxx"
                    android:padding="@dimen/ten_dp"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewPhone4"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:padding="@dimen/ten_dp"
                    android:text="@string/phone5"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textViewPhone5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView10"
                    android:drawablePadding="@dimen/ten_dp"
                    android:gravity="left|center_vertical"
                    android:text="xxx-xxx-xxxx"
                    android:padding="@dimen/ten_dp"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />


                <Button
                    android:id="@+id/buttonLogout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty_dp"
                    android:layout_below="@+id/textViewPhone5"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:background="@drawable/buttons_selector"
                    android:drawablePadding="@dimen/ten_dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/log_out"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttoninvitaton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty_dp"
                    android:layout_below="@+id/buttonLogout"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:layout_marginTop="@dimen/five_dp"
                    android:background="@drawable/buttons_selector"
                    android:drawablePadding="@dimen/ten_dp"
                    android:gravity="center"
                    android:onClick="openInvitationActivity"
                    android:singleLine="true"
                    android:text="@string/invitation_activity"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_below="@+id/buttoninvitaton"/>
            </RelativeLayout>

    </ScrollView>
</RelativeLayout>